<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    >
    <ImageView
        android:id="@+id/dialogButtonExit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
       android:src="@drawable/new_dialog_x" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30dp"
            android:text="ברוכים הבאים לאפליקציית פניני הלכה"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#FFF7EC"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:text="שמחים להגיש בפניכם את אפליקצית פניני הלכה בעיצוב משופר, הכוללת:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="1. השלמת ספרי פניני הלכה בשפות"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="2. שיפור הצגת תוצאות במנוע החיפוש והשלמה אוטומטית"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="3. הלכה יומית ותזמון תזכורת"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="4. פתרון באגים"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/txt_blank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt7"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="לימוד מהנה!"
                android:textColor="#9D0025"

                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt8"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="צוות אפליקציית פניני הלכה"
                android:textColor="#9D0025"
                android:textSize="20dp" />



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>