<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePage">


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <LinearLayout
                android:id="@+id/lnrOption3"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#FFF7EC"
                android:gravity="center">

                <ImageView
                    android:id="@+id/to_main"
                    android:layout_width="170dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginLeft="110dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/to_main"
                    android:tag="4" />

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="69dp"
                    android:layout_height="48dp"

                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:paddingRight="36dp"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/action_config"
                    android:tag="4" />
            </LinearLayout>

            <ImageView
                android:id="@+id/b_chap2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:scaleX="800"
                android:src="@drawable/head_shaddow"
                android:tag="4" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="75dp">

        <ImageView
            android:id="@+id/daily_limud2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:paddingLeft="7dp"
            android:src="@drawable/ic_too_py"
            android:contentDescription="daily study"/>

        <ImageView
            android:id="@+id/too_main"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/ic_too_books" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="135dp">

        <TextView
            android:id="@+id/the_books"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:text="ספרים"
            android:textColor="#970606"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/daily_limud"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="70dp"
            android:text="הלימוד היומי"
            android:textColor="#970606"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="195dp">

        <ImageView
            android:id="@+id/my_marks"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_my_marks" />

        <ImageView
            android:id="@+id/searchAll"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/ic_search_all" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="255dp">

        <TextView
            android:id="@+id/the_search"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:text="חיפוש"
            android:textColor="#970606"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/the_marks"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="90dp"
            android:text="סימניות"
            android:textColor="#970606"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="315dp">

        <ImageView
            android:id="@+id/settings"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"

            android:src="@drawable/ic_setting_vec" />

        <ImageView
            android:id="@+id/my_last_loc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"

            android:src="@drawable/ic_last_loc" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="375dp">

        <TextView
            android:id="@+id/the_last"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="210dp"
            android:layout_marginLeft="210dp"
            android:text="מיקום אחרון"
            android:textColor="#970606"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/the_settings"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="90dp"
            android:text="הגדרות"
            android:textColor="#970606"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="430dp">

        <ImageView
            android:id="@+id/b_chap3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"

            android:scaleX="800"
            android:src="@drawable/head_shaddow"
            android:tag="4" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="435dp"
        android:background="#FFF7EC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="450dp">

        <ImageView
            android:id="@+id/ask_the_rav"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/ic_ask_the_rav"
            android:contentDescription="ask the Rav"/>

        <ImageView
            android:id="@+id/take_quiz"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:src="@drawable/ic_quiz" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="510dp">

        <TextView
            android:id="@+id/the_quiz"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:text="בחן/י את עצמך"
            android:textColor="#970606"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/the_ask"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:text="שאל את הרב"
            android:textColor="#970606"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="570dp">

        <ImageView
            android:id="@+id/donation2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/ic_go_donate" />

        <ImageView
            android:id="@+id/go_shop"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:src="@drawable/ic_go_shop"
            android:contentDescription="go shop"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="635dp">

        <TextView
            android:id="@+id/buy_books"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="212dp"
            android:layout_marginLeft="212dp"
            android:text="רכישת ספרים"
            android:textColor="#970606"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donation"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="73dp"
            android:layout_marginLeft="73dp"
            android:text="היו שותפים"
            android:textColor="#970606"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>


